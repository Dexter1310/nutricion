{% extends '/admin/index.html.twig' %}

{% block title %}NOTES{% endblock %}

    {% block admin %}
        {{ parent() }}
        <div class="container">
            {% for label, messages in app.flashes(['success', 'warning']) %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            <a href="{{ path('notes') }}">Crear nota</a>
            <table class="table">
                <thead>F
                <th>titulo</th>
                <th>Nota</th>

                <th>Opciones</th>
                </thead>
                <tbody>
                {% for item in list %}
                    <tr>
                        <td>{{ item.title }}</td>
                        <td>{{ item.note |raw}}</td>
                        <td><a href="{{ path('note_delete', { 'id': item.id }) }}"> {% if item.state==1%}  â†™  {% endif%} Eliminar nota</a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>


        </div>
    {% endblock %}

